@model UnionDev.Models.Usuarios


<style>
    .brand-sidebar .logo-wrapper {
        line-height: 15px !important;
    }

    .brand-sidebar {
        box-shadow: none;
    }

    ul.side-nav.leftside-navigation li:not(.no-padding).user-details {
        padding: 10px 0px 0px 0px;
    }

    .brand-sidebar .logo-wrapper a.brand-logo img {
        height: 30px;
    }

    .cyan.darken-2 {
        background-color: #3e0202 !important;
    }

    .side-nav {
        background: linear-gradient(to right,#350101,#4e0202);
    }

        .side-nav .bold {
            transition: all .2s ease-in-out;
            background: linear-gradient(to right,#350101,#4e0202);
            border: 1px solid #550202;
        }

            .side-nav .bold :hover {
                background: #272727;
                transform: scale(1.2);
            }

        .side-nav .nav-text {
            color: white;
        }
</style>

<aside id="left-sidebar-nav">
    <div class="brand-sidebar">
        <h1 class="logo-wrapper">

            <a href="@Url.Action("PainelControleAdmin","Admin")" class="brand-logo darken-1">
                <img src="~/images/logo-interno.png" style="margin: -4px 5px; height: 42px;" />
            </a>
        </h1>
    </div>
    <ul id="slide-out" class="side-nav fixed leftside-navigation">
        <li class="user-details cyan darken-2">
            <div class="row">
                <div class="col s12 center" style="padding-top: 15px;">
                    <p class="user-roal left" style="font-size:13px; margin: -21px 0 0 13px;"><b>Nome: </b>@Model.Login</p>
                    <p class="user-roal left" style="font-size:13px; margin: -21px 0 0 13px;"><b>Perfil: </b>@Model.Permissao.Descricao</p>
                </div>

            </div>
        </li>

        <li class="no-padding">
            <ul class="collapsible" data-collapsible="accordion">
                <!--Painel de Controle-->
                <li class="bold">
                    <a class="waves-effect waves-cyan" href="@Url.Action("PainelControleAdmin","Admin")">
                        <i class="material-icons"></i>
                        <span class="nav-text">Painel de Controle</span>
                    </a>
                </li>
                <!--Agenda-->
                <li class="bold">
                    <a class="waves-effect waves-cyan" href="@Url.Action("Agenda","Admin")">
                        <i class="material-icons"></i>
                        <span class="nav-text">Cadastro de Clientes</span>
                    </a>
                </li>
                <!--Banco de Clientes-->
                <li class="bold">
                    <a class="waves-effect waves-cyan" href="@Url.Action("ConsultaClienteAdmin","Admin")">
                        <i class="material-icons"></i>
                        <span class="nav-text">Banco de Clientes</span>
                    </a>
                </li>
                <!--Banco de Candidatos-->
                <li class="bold">
                    <a class="waves-effect waves-cyan" href="@Url.Action("ConsultaCandidatos","Admin")">
                        <i class="material-icons"></i>
                        <span class="nav-text">Banco de Candidatos</span>
                    </a>
                </li>
                <!--Relatórios-->
                <li class="bold">
                    <a class="waves-effect waves-cyan" href="@Url.Action("Relatorio","Admin")">
                        <i class="material-icons"></i>
                        <span class="nav-text">Relatórios</span>
                    </a>
                </li>
                <!--Ajuda-->
                <li class="bold">
                    <a class="waves-effect waves-cyan" href="@Url.Action("Ajuda","Admin")">
                        <i class="material-icons"></i>
                        <span class="nav-text">Ajuda</span>
                    </a>
                </li>
            </ul>
        </li>
    </ul>
    <a href="#" data-activates="slide-out" class="sidebar-collapse btn-floating btn-medium waves-light hide-on-large-only orange">
        <i class="material-icons">menu</i>
    </a>
</aside>

<script src="~/Scripts/js/materialize.min.js"></script>
