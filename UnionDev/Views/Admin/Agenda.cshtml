@model IList<UnionDev.Models.Agendamento>
@{
    ViewBag.Title = "Agenda";
    Layout = "~/Views/Shared/LayoutGeralAdmin.cshtml";
}

<h2>Agenda</h2>

<form class="form-horizontal" name="form" id="form">

    <div class="form-group">

        <div class="input-group">
            <input type="text" class="form-control col-lg-8" name="candidato" id="candidato" placeholder="Pesquisar">
            <button type="button" class="btn btn-primary pull-right" onclick="Consultar()" style="margin-left:5px;">Consultar</button>
        </div>
    </div>


    <div class="panel-body">
        <div id="no-more-tables">
            <table class="table table-striped table-bordered table-hover table-condensed cf" id="grindcandidato">
                <thead class="cf">
                    <tr>
                        <th>Nome</th>
                        <th>Horário</th>
                        <th>Data</th>
                        <th>Acao</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Count != 0)
                    {
                        foreach (UnionDev.Models.Agendamento agendamento in Model)
                        {
                            <tr class="gradeU">
                                <td data-title="Nome">@agendamento.NomeCandidato</td>
                                <td data-title="Horário">@agendamento.HoraInicio</td>
                                <td data-title="Data">@agendamento.Data</td>

                                <td data-title="Acao">
                                    <button class="btn btn-primary" onclick="Remover(@agendamento.Codigo)">Deletar</button>
                                    <button type="button" class="btn btn-primary" onclick="AbrirModal(@agendamento.Codigo)">Editar</button>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</form>
